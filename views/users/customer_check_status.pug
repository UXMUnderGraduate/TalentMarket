extends ../layout

block content
  if !status
    p 전달온 진행상황이 없습니다
  else
    each statu in status
      .d-flex
        img.col-md-2.img-fluid.my-2(src= statu.img)
        .col-md-6
          table.my-2.table.table-bordered
            tbody
              tr
                th.table-light(scope="row") 주문번호
                td= statu.order_id.trId
              tr
                th.table-light(scope="row") 내용
                td= statu.content
              tr
                th.table-light(scope="row") 수신일
                td= statu.createdAt
          .d-flex.justify-content-end.align-items-center
            a.btn.btn-primary.mx-2(href=`/users/web3/${statu.id}`) 수락
            a.btn.btn-secondary(href=`/users/reject/${statu.id}`) 거절  
        .col-md-4
          
              


          